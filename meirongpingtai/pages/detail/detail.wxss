/* pages/detail/detail.wxss */
.container{
  background: #fff;
}

/* 服务图片样式 */
.ar_coverpath{
  width: 100%;
  height: 390rpx;
  box-sizing: border-box;
}
.ar_coverpath image{
  width: 100%;
  height: 100%;
}

/* 服务信息样式 */
.ar_content{
  font-size: 30rpx;
  color: #666;
  background: white;
  margin-top: 40rpx;
  line-height: 45rpx;
}
.ar_content .ar_content_h1, .ar_content .ar_content_price{
  font-size: 32rpx;
  font-weight: 700;
  line-height: 64rpx;
  color: #000;
}
.ar_content .ar_content_price{
  color: #e64340;
  margin-left: 60rpx;
}
.ar_line{
  width: 100%;
  height: 2rpx;
  background: #000;
  margin: 30rpx 0rpx;
}
.ar_book{
  font-size: 30rpx;
  color: white;
  background: #d24a59;
  margin: 40rpx 10rpx;
}