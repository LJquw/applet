/* pages/book/book.wxss */
.container{
  background: #fff;
}

/* 服务图片样式 */
.ar_coverpath{
  width: 100%;
  height: 390rpx;
  box-sizing: border-box;
}
.ar_coverpath image{
  width: 100%;
  height: 100%;
}


/* 地址样式处理 */
.ar_picker{
  width: 100%;
  font-size: 30rpx;
  color: #000;
  background: #efeff4;
  margin: 0rpx;
}
.ar_picker .ar_picker_wrap{
  width: 670rpx;
  background: #fff url(data:image/png;base64,) no-repeat right center;
  background-size: 25rpx 14rpx;
  padding: 20rpx;
  margin: 20rpx auto;
  border-radius: 20rpx;
}

/* 日期样式处理 */
.ar_content{
  padding: 20rpx 60rpx;
  font-size: 30rpx;
  background: #fff;
  margin-top: 40rpx;
  line-height: 45rpx;
  color: #666;
}
.ar_content_h1{
  font-size: 32rpx;
  font-weight: 700;
  line-height: 64rpx;
  color: #000;
}
.ar_date image{
  width: 34rpx;
  height: 38rpx;
}
.ar_time image{
  width: 34rpx;
  height: 38rpx;
}
.ar_date_time{
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  margin: 32rpx 0rpx 60rpx;
}
.ar_date_time .ar_date, .ar_date_time .ar_time{
  width: 47%;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}

.ar_date_time picker{
  width: 220rpx;
  border: 1rpx solid #ddd;
  border-radius: 8rpx;
  padding: 0rpx 10rpx;
  margin-left: 10rpx;
}
.ar_content_h1{
  font-size: 32rpx;
  font-weight: 700;
  line-height: 64rpx;
  color: #000;
}
.input_msg{
  border: 1rpx solid #ddd;
  border-radius: 8rpx;
  padding: 0rpx 10rpx;
}
.ar_book{
  font-size: 32rpx;
  background: #de4a58;
  line-height: 60rpx;
  color: #fff;
  margin-top: 15rpx;
}