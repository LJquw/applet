<view class="wapper">
  <form bindsubmit="submit">

    <view class="input">用户名：
      <input type="text" name="username" placeholder="请输入用户名"/>
    </view>
    <view class="input">手机号：
      <input type="number" name="phone" placeholder="请输入手机号"/>
    </view> 
    <view class="input">密　码：
      <input type="password" name="password" placeholder="请输入密码"/>
    </view>
    <view bindtap="loginView" style="color:blue;text-align: center;margin-top:28rpx;font-size:32rpx">已有账号，去登录</view>
    <button style="width:80%" form-type="submit">注册账号</button>
  </form>
</view>