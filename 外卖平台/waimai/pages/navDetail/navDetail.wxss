/* pages/navDetail/navDetail.wxss */
page{
  width: 100%;
  height: 100%;
}
.topTitle{
  text-align: center;
  width: 100%;
  padding: 20rpx 0;
}
.topTitle input{
  border: 1px solid #999;
  width: 50%;
  padding: 16rpx 10rpx;
  border-radius: 10rpx;
  text-align: center;
  flex: 4;
  margin-right: 20rpx;
}
button{
  margin-left: 40rpx;
  background-color: orange;
  color: #fff;
  flex: 1;
}
.searchform{
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 0 20rpx;
}


.proInfos{
  margin-top: 5%;
}

.product{
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  align-items: center;
  padding: 40rpx;
}
.product image{
  flex: 1;
  height: 160rpx;
}
.info{
  flex: 2;
  margin-left: 20rpx;
  height: 160rpx;
}
.info-t{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}
.yueyu{
  background-color: #d24a58;
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  text-align: center;
  line-height: 100rpx;
  color:#fff;
  font-weight: bold;
}
.proInfo{
  width: 400rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.proname{
  width: 300rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.loadMore{
  text-align: center;
  padding: 20rpx;
  color: #999;
}