page{
  width: 100%;
  height: 100%;
}
.wapper{
  padding: 0 20rpx;
}
.shopImage{
  width: 100%;
  height: 300rpx;
}
.shopName{
  text-align: center;
  padding: 30rpx 0;
}
.busexplain{
  color: #999;
  padding: 20rpx 0;
}

.pro{
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 30rpx;
  border-bottom: 1px solid #999;
}

.proInfo{
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: 80%;
  padding: 40rpx 0;
  
}

.btn{
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  text-align: center;
  line-height: 80rpx;
  color: #fff;
