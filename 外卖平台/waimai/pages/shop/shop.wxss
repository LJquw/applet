/* pages/shop/shop.wxss */
page{
  width: 100%;
  height: 100%;
}
.shopView{
  text-align: center;
  width: 100%;
  height: 100%;
  background-color: orange;
  padding: 20rpx;
}
.shopWapper{
  padding: 20rpx 30rpx;
}
.shopWapper image{
  width: 100%;
}
.shopInfo{
  margin: 50rpx 0;
  box-shadow: 0px 0px 10px #d24a58;
}
.info{
  padding: 10rpx 20rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 3;
  overflow: hidden;
  height: 164rpx;
  font-weight: bold;
}

.loadMore{
  text-align: center;
  padding: 20rpx;
  color: #999;
}