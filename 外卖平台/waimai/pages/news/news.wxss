/* pages/news/news.wxss */
page{
  width: 100%;
  height: 100%;
}
.newsView{
  text-align: center;
  width: 100%;
  height: 100%;
  background-color: orange;
  padding: 20rpx;
}
.newsWapper{
  padding: 20rpx 30rpx;
}
.newsWapper image{
  width: 100%;
}
.newsInfo{
  margin: 50rpx 0;
  box-shadow: 0px 0px 10px #d24a58;
}
.info{
  padding: 10rpx 20rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 3;
  overflow: hidden;
  height: 164rpx;
}
.info1{
  font-size: 20px;
  color: orange;
}
.info2{
  margin-top: 20rpx;
}

.loadMore{
  text-align: center;
  padding: 20rpx;
  color: #999;
}